# Vibha StockAlerts Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_FALLBACK_MODE=true

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_TICKER=false

# Feature Flags
VITE_ENABLE_DUAL_TICKER=true
VITE_ENABLE_WHATSAPP_ALERTS=true

# Market Configuration
VITE_INDIAN_MARKET_ENABLED=true
VITE_GLOBAL_MARKET_ENABLED=true

# Refresh Intervals (in milliseconds)
VITE_TICKER_REFRESH_INTERVAL=45000
VITE_PORTFOLIO_REFRESH_INTERVAL=30000

# Demo Data Configuration
VITE_USE_DEMO_DATA=true
VITE_DEMO_STOCK_COUNT=12
